@model HomeDetailsViewModel
@{ 
    ViewBag.Title = Model.PageTitle;
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top img-thumbnail" src="@Model.Student.getImagePathUrl()[0]" asp-append-version="true"/>
                <h4>Id:@Model.Student.Id</h4>
                <h4>email:@Model.Student.Email</h4>
                <h4>classname:@Model.Student.ClassName</h4>
            </div>
            <div class="card-footer text-center">
                <a href="/home/index" class="btn btn-primary">Return</a>
            </div>
        </div>
    </div>
</div>


    

@section Scripts{ 
    <script src="~/js/Customer.js"></script>
}
    