@model IEnumerable<Student>
@{ 
    ViewBag.Title = "Student List Page";
}

<h1>Index</h1>

<div class="card-deck">
        @foreach (var student in Model)
        {
    <div class="card m-3">
        <div class="card-header"><h3>@student.Name</h3></div>
        <img class="card-img-top img-thumbnail1" src="@student.getImagePathUrl()[0]" asp-append-version="true"/>
        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@student.Id" class="btn btn-primary">View</a>
            <a asp-controller="home" asp-action="edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
            <a asp-controller="home" asp-action="delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
        }
</div>


